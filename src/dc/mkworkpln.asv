function hg = mkworkpln(pos,w,h,color)

x = [0 0 0 0];
y = [-1 1 1 -1];
z = [-1 -1 1 1];

x = x+pos;
y = y*w/2;
z = z*h/2;

hg = hggroup('parent',gca);
h = patch(x,y,z,'facecolor',color,'facealpha',.2);
set(h,'zdata',z);
bdown = 'h=findall(gca,''tag'',''dcworkplane''); n=find(h==gcbo); p=get(h,''parent''); compworkpln(h,n);';
set(h,'buttondownfcn',bdown,'parent',hg,'tag','dcworkplane');